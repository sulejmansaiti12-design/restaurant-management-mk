# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restaurant_management
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Fiscal Configuration (North Macedonia)
FISCAL_ENABLED=true
FISCAL_PREFIX=FIS
COMPANY_NAME=Your Restaurant Name
COMPANY_VAT_ID=MK1234567890
COMPANY_ADDRESS=Skopje, North Macedonia

# Tax Rates (Macedonia)
TAX_RATE_STANDARD=18
TAX_RATE_REDUCED=10
TAX_RATE_SUPER_REDUCED=5
TAX_RATE_ZERO=0

# Default Admin Credentials
DEFAULT_OWNER_USERNAME=owner
DEFAULT_OWNER_PASSWORD=owner123
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_DEV_USERNAME=developer
DEFAULT_DEV_PASSWORD=dev123

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
